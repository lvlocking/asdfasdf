<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:numColumns="auto_fit"
    android:columnWidth="50dp"
    android:orientation="vertical"
    android:rowCount="8"
    android:rowWidth="auto_fit"
    android:stretchMode="columnWidth" >

    <LinearLayout
        android:id="@+id/octave6"
        android:layout_width="match_parent"
        android:layout_height=""
        android:layout_row="1"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/octave5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/octave4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/octave3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/octave2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/note" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/octave1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape" >

        <ImageView
            android:id="@+id/myimage6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/note" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/horizontalScrollView"
        android:layout_row="6"
        android:layout_column="0" />

</GridLayout>